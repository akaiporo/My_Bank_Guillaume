<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory ?>
<?import javafx.scene.layout.AnchorPane?>
  
<SplitPane dividerPositions="0.4" orientation="VERTICAL" prefHeight="384.0" prefWidth="565.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main_view.TransactionListController">
  <items>
      <TableView fx:id="listTransactions">
      <columns>
        <TableColumn prefWidth="155.0" text="Libellé" >
        	<cellValueFactory><PropertyValueFactory property='Wording'/></cellValueFactory>
        </TableColumn>
        <TableColumn prefWidth="61.0" text="Valeur" >
        	<cellValueFactory><PropertyValueFactory property='TransactionValue'/></cellValueFactory>
        </TableColumn>
      </columns>
    </TableView>
    <AnchorPane prefHeight="181.0" prefWidth="510.0">
         <children>
            <CheckBox fx:id="chkDone" 			layoutX="26.0" layoutY="14.0" mnemonicParsing="false" text="Réalisée" AnchorPane.leftAnchor="26.0" AnchorPane.topAnchor="14.0" />
            <Label 								layoutX="24.0" layoutY="83.0" text="Libellé" AnchorPane.leftAnchor="26.0" AnchorPane.topAnchor="83.0" />
            <TextField fx:id="txtLabel" 		layoutX="24.0" layoutY="100.0" prefHeight="25.0" prefWidth="462.0" AnchorPane.leftAnchor="26.0" AnchorPane.rightAnchor="24.0" AnchorPane.topAnchor="100.0" />
            <DatePicker fx:id="dateCreated" 	layoutX="26.0" layoutY="48.0" AnchorPane.leftAnchor="26.0" AnchorPane.topAnchor="48.0" />
            <ChoiceBox fx:id="choiceCategory" 	layoutX="26.0" layoutY="149.0" prefHeight="25.0" prefWidth="460.0" AnchorPane.leftAnchor="26.0" AnchorPane.rightAnchor="24.0" AnchorPane.topAnchor="149.0" />
            <Label 								layoutX="24.0" layoutY="132.0" text="Catégorie" AnchorPane.leftAnchor="26.0" AnchorPane.topAnchor="132.0" />
            
            <Button fx:id="btnApply" onAction="#handleBtnApply" 		layoutX="428.0" layoutY="10.0" mnemonicParsing="false" text="Appliquer" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="10.0" />
            <Button  onAction="#handleBtnNew" 							layoutX="322.0" layoutY="10.0" mnemonicParsing="false" text="Nouvelle tâche" AnchorPane.rightAnchor="93.0" AnchorPane.topAnchor="10.0" />
         </children>
      </AnchorPane>
  </items>
</SplitPane>
